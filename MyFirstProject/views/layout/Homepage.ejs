<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Sidebar Example</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylesheet.css">

  </head>
  <body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
      <div class="container-fluid">
          <button class="btn btn-primary d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar">
              <i class="fas fa-bars"></i>
          </button>
          <a class="navbar-brand" href="#">
              Mediconnect
          </a>
          <form class="d-none d-lg-flex mx-auto" method="POST" action="/search">
            
              <input class="form-control me-2" name="searchTerm" type="search" placeholder="Search" aria-label="Search">
              </form>
          <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fas fa-video"></i></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fas fa-th"></i></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#"><i class="fas fa-bell"></i></a>
              </li>
              <li class="nav-item">
                  <% if (user) { %>
                  <a class="nav-link" href="/home" id="navbarDropdown" role="button">
                      Hi <%= user.username %>
                  </a>
                  <% } else { %>
                  <a href="/login">Login</a>
                  <% } %>
              </li>
          </ul>
      </div>
  </nav>

  <div class="sidenav">
      <a href="/home" class="active"><i class="fas fa-home"></i> Home</a>
      <a href="/myblogs"><i class="fab fa-youtube"></i> My Blogs</a>
      <hr>
      <a href="/submit-blog"><i class="fas fa-history"></i> Publish your Blog</a>
      <a href="/Logout"><i class="fas fa-sign-out-alt"></i> Log Out</a>
      <hr>
      <a href="#" class="text-center fw-bold"><i class="fab fa-youtube"></i> Mediconnect</a>
  </div>
      <a href="#" class="text-center fw-bold"><i class="fab fa-youtube"></i>Mediconnect </a>
   
    </div>

    
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
