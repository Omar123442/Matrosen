<%- include('layout/Homepage.ejs') %>
<link rel="stylesheet" href="/css/submit-blog.css">
<div class="content">
    <div class="text-center">
        <h2>Publish your Blog</h2>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="container mt-3">
                    <form action="/submit-blog" method="POST" enctype="multipart/form-data" class="animated-form">
                        <div class="mb-3">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control animated-input" id="title" placeholder="Enter title" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="catchy">Catchy Text:</label>
                            <input type="text" class="form-control animated-input" id="catchy" placeholder="Enter catchy text" name="catchy" required>
                        </div>
                        <div class="mb-3">
                            <label for="btext">Blog Text:</label>
                            <textarea name="btext" class="form-control animated-input" id="btext" placeholder="Enter your blog text" rows="5" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image">Image:</label>
                            <input type="file" class="form-control animated-input" id="image" name="image" accept="image/*" required>
                            <small class="form-text text-muted">Upload an image (JPEG, PNG, GIF, etc.)</small>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary animated-button">Submit</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
